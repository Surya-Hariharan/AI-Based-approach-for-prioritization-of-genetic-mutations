# Environment Configuration for Genetic Mutation AI

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=genetic-mutation-ai-secret-key-2026-change-in-production

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Model Configuration
DEFAULT_MODEL=mlp
USE_GPU=true

# File Handling
MAX_FILE_SIZE=16777216  # 16MB in bytes
UPLOAD_FOLDER=data/uploads

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# HOST=0.0.0.0
# SECRET_KEY=your-super-secure-random-key-here

# Optional: Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost/genetic_mutations
# REDIS_URL=redis://localhost:6379/0

# Optional: Logging
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log